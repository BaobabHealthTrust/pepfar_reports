<style>

body
{
    background-color: #1b1b1b;
    padding-top: 40px;
}


.input-group-addon
{
    background-color: rgb(50, 118, 177);
    border-color: rgb(40, 94, 142);
    color: rgb(255, 255, 255);
}
.form-control:focus
{
    background-color: #eee;
    color: #000;
}

.form-signup input  { border: 1px solid rgb(50, 118, 177); }

</style>

<br />
<br />
<br />
<br />
<br />


<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <h5 class="text-center">PEPFAR REPORTS</h5>
          <%#= form_tag('/user/login', method: 'post', enctype: 'multipart/form-data', class: 'form form-signup', autocomplete: "off") do %>
          <form action="/user/login" method="post">
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                <%=text_field(:user, :username, :textCase => "lower",:placeholder => "username",:class => 'form-control') %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                <%=password_field(:user, :password, :textCase => "lower",:placeholder => "password",:class => 'form-control') %>
              </div>
            </div>
          </div>
          <%= submit_tag "Login" ,:class => "btn btn-primary btn-block" , 
              :role => "button", :style => "margin: auto !important; width: 40% !important; 
              margin-bottom: 20px !important; height: 40px !important;" %>
        </form>
      </div>
    </div>
  </div>
</div>
</div> 
